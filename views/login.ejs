<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/dashboardhead') %>
        <!-- Custom styles for this template -->
        <link href="/css/signin.css" rel="stylesheet">
        <link href="/css/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

</head>

<body class="text-center">
    <%- include('./partials/dashboardnav') %>


        <form class="form-signin" method="POST" action="/admin/login">
            <img class="mb-4" src="/images/logoed2.jpg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <span> <% if (locals.error.length>0) { %>
                <ul>
                  
                        <li class="alert alert-danger" style="list-style:none; font-weight: bold;">
                            <%= error%>
                        </li>
                   
                </ul>
                <% } %>
            </span>
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" name="password" class="form-control" data-placement="after" data-toggle="password" maxlength="10" placeholder="Password" required>
            <div class="checkbox mb-3">
                <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block button-control" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-muted">Iya-Alami Estates &copy; 2020</p>
        </form>

        <!-- /.container -->
        <%- include('./partials/dashboardscript') %>

</body>

</html>