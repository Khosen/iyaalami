<!doctype html>
<html lang="en">

<head>

    <%- include('./partials/dashboardhead') %>
        <link href="/css/form.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


</head>

<body class="text-center container">
    <%- include('./partials/dashboardnav') %>

        <!--  <div class="col-md-8 col-lg-12 text-center">-->

        <div class="form-row col-md-8 col-lg-12 text-center">

            <form class="form-fill" action="/admin/sold" method="post" >
                <h5 style="font-weight: bold; margin-top: 5rem;">Iya-Alami Estate Sold Property</h5>
                <span style="font-size: x-small;">please fill in the details of the property sold</span>
                <br>
                <br>
                <span> <% if (locals.message.length>0) { %>
                    <ul>
                         <li class="alert alert-danger" style="list-style:none; font-weight: bold;">
                                <%= message%>
                            </li>
                       </ul>
                    <% } %>
                <h6 style="font-weight: bold;">
                 
                </h6>
                <div class="form-row">
                    <div class="input-field col s2">
                        <input placeholder="eg.: Iya-Alami Iconic Homes" id="address" name="address" type="text" class="validate">
                        <label for="type" class="fontsize">Address</label>
                    </div>

                    <div class="input-field col s2">
                        <select id="status" name="status" class="rSell">
            
                          <% for (a=0; a< docs.length; a++) {%>
                            <option value="<%= docs[a].criteria%>"> <%= docs[a].criteria %></option>
                            
                           <% }%> 
                        
                        </select>
                        <label style=" color:black" class="rSell">Type</label>
                    </div>

                  
                  
                </div>
                <div class="form-row">  
                    <div class="input-field col s2">
                        <input placeholder="eg.: Iya-Alami Iconic Homes" id="projectName" name="projectName" type="text" class="validate">
                        <label for="projectName" class="fontsize">Project Name</label>
                    </div>
                    <div class="input-field col s2 ">
                        <input placeholder="eg.: No. 2 State Street" id="description" name="description" type="text" class="validate">
                        <label for="description" class="fontsize">Description</label>
                    </div>
                  
                </div>
                <div class="form-row">
                    <div class="input-field col s2">
                        <input placeholder="eg.: Abuja" id="city" name="city" type="text" class="validate">
                        <label for="city" class="fontsize">City</label>
                    </div>
                    <div class="input-field col s2">
                        <input placeholder="eg.: FCT" id="state" name="state" type="text" class="validate">
                        <label for="state" class="fontsize">State</label>
                    </div>
                  
                   
                </div>

                <div class="form-row">
                    <div class="input-field col s2">
                        <input type="number"  placeholder="eg.: 18" id="units" name="units" >
                        <label for="units" class="fontsize">Units</label>
                    </div>
                    <div class="input-field col s2">
                        <input placeholder="eg.: 2" id="noSold" name="noSold" type="number">
                        <label for="noSold" class="fontsize">No. Sold</label>
                    </div>
                   
                </div>

                <button class="btn btn-primary blue" type="submit" style="color:white;">Submit form</button>


            </form>

        </div>



        <!-- /.container -->
        <%- include('./partials/dashboardscript') %>
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
            <!-- Compiled and minified JavaScript -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script src="/js/theValue.js"></script>
  
           <script>
                $(document).ready(function() {
                    $('select').formSelect();
                });
            </script>
            <script>
                $('#situation').val('');
                M.textareaAutoResize($('#situation'));
            </script>
            <script>
                $('#features').val('');
                M.textareaAutoResize($('#features'));
            </script>

</body>

</html>