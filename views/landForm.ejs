<!doctype html>
<html lang="en">

<head>

    <%- include('./partials/dashboardhead') %>
        <link href="/css/form.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


</head>

<body class="text-center container">
    <%- include('./partials/dashboardnav') %>

        <!--  <div class="col-md-8 col-lg-12 text-center">-->

        <div class="form-row col-md-8 col-lg-12 text-center">

            <form class="form-fill" action="/admin/landForm" method="post" enctype="multipart/form-data">
                <h5 style="font-weight: bold; margin-top: 5rem;">Iya-Alami Estate Land-Property</h5>
                <span style="font-size: x-small;">please fill in the details of the property you want to be listed</span>
                <br>
                <br>
                <span> <% if (locals.message.length>0) { %>
                    <ul>
                      
                            <li class="alert alert-danger" style="list-style:none; font-weight: bold;">
                                <%= message%>
                            </li>
                       
                    </ul>
                    <% } %>
                <h6 style="font-weight: bold;">
                 
                </h6>
                <div class="form-row">
                   
                    <div class="input-field col s2">
                        <input placeholder="eg.: Iya-Alami Iconic Homes" id="address" name="address" type="text" class="validate">
                        <label for="address" class="fontsize">Address</label>
                    </div>
                    <div class="input-field col s2 ">
                        <input placeholder="eg.: No. 2 State Street" id="district" name="district" type="text" class="validate">
                        <label for="district" class="fontsize">District</label>
                    </div>
                   
                </div>
                <div class="form-row">
                    <div class="input-field col s2">
                        <input placeholder="eg.: Abuja" id="city" name="city" type="text" class="validate">
                        <label for="city" class="fontsize">City</label>
                    </div>
                    <div class="input-field col s2">
                        <input placeholder="eg.: FCT" id="state" name="state" type="text" class="validate">
                        <label for="state" class="fontsize">State</label>
                    </div>
                  
                   
                </div>

                <div class="form-row">
                    <div class="input-field col s2">
                        <input placeholder="eg.: 500 sqaure meters" id="landDescription" name="landDescription" type="text" class="validate">
                        <label for="landDescription" class="fontsize">Land Description</label>
                    </div>
                    <div class="input-field col s2">
                        <input placeholder="eg.: N1.5m" id="price" name="price" type="text" class="validate">
                        <label for="price" class="fontsize">Price</label>
                    </div>   
                    <div class="input-field col s2">
                        <input placeholder="eg.: N1.5m" id="fee" name="fee" type="text" class="validate">
                        <label for="fee" class="fontsize">Infrastructure Fee</label>
                    </div>               
                </div>

               
                <div class="form-row" style="margin-top: -2rem;">
              <!--      <span style="font-size: x-small;">(upload max. 2 images fileSize max 2mb)</span>-->
                     
                    <div class="file-field input-field col">
                           <div class="btn blue">
                            <span>Browse</span>
                            <input type="file" name='image' onchange="readURL(this);" multiple>
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" id='images' name='images' type="text" placeholder="Upload PropertyImage">
                        </div>
                        <img id="prev" src="<%= typeof  file != 'undefined' ? file: ' ' %>" class="responsive-img imageSize " />
                 
                </div>
                                  
                </div>
                <button class="btn btn-primary blue" type="submit" style="color:white;">Submit form</button>
            </form>
        </div>


        <!-- /.container -->
        <%- include('./partials/dashboardscript') %>
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
            <!-- Compiled and minified JavaScript -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script>
                $(document).ready(function() {
                    $('select').formSelect();
                });
            </script>
            <script>
                $('#situation').val('');
                M.textareaAutoResize($('#situation'));
            </script>
            <script>
                $('#features').val('');
                M.textareaAutoResize($('#features'));
            </script>

</body>

</html>